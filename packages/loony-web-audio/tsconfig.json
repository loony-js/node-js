{
  "compilerOptions": {
    "lib": ["DOM", "ESNext"],
    "typeRoots": ["../../node_modules/@types"],
    "module": "ESNext",
    "target": "ES6",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "outDir": "lib",
    "declaration": true,
    "moduleResolution": "Node",
    "declarationDir": "./types"
  }
}
